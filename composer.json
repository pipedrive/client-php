{
    "name": "pipedrive/pipedrive",
    "type": "library",
    "description": "Pipedrive REST client for PHP",
    "keywords": [
        "pipedrive",
        "CRM",
        "sales",
        "contacts",
        "customers",
        "deals",
        "pipeline",
        "sales pipeline"
    ],
    "homepage": "https://github.com/pipedrive/client-php",
    "license": "MIT",
    "require": {
        "php": ">=5.4.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "mashape/unirest-php": "~3.0.1",
        "apimatic/jsonmapper": "~1.3.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^2.7",
        "phpunit/phpunit": "4.8.*"
    },
    "autoload": {
        "psr-4": {
            "Pipedrive\\": "src/"
        }
    }
}